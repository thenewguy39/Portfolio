<!doctype html>
<html lang="en">
<head>

<style>
    .myProgress {
    width: 100%;
    background-color: #ddd;
    }

    .myBar {
    width: 10%;
    height: 30px;
    background-color: rgb(36, 84, 241);
    text-align: center;
    line-height: 30px;
    color: white;
    }
</style>

    <title>Rupayan</title>
    <meta name="description" content="" />

    {{>head}}
</head>

<body>
    <div class="blocks-page">
        {{>header2}}
        
        <section style="background:url('{{{page.hero.img_background}}}=s2048');background-size:cover;background-position:center;">
            <div class="gradient-div py-3" style="height:100vh">
        
                <div class="container">
                    <div class="row justify-content-center header-row">
                        <div class="col-12 col-md-8 col-lg-7 text-center text-white">
                            <img class="mt-3" style="width:270px;border-radius:50%" src="{{{page.hero.img_profile}}}=s320-c" />
                            <h1 class="display-3 mt-5 ">{{page.hero.greeting}}</h1>
                            <p class="lead mb-4 mt-5">
                                {{page.hero.introduction}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-5 py-md-7">
            <div class="container py-md-5">
                <div class="row block-header">
                    <div class="col-sm-8 mx-auto text-center">
                        <h1 class="display-4 mt-2">{{page.projects.header}}</h1>
                        <hr>
                        <p class="lead">{{page.projects.subheader}}</p>
                    </div>
                </div>
        
                <div class="row mt-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
                    {{#projects}}
                    <div class="col-md-4 col-sm-12 mb-2r">
                        <a href="/project/{{slug}}">
                            <div class="position-relative project">
                                <div class="image position-relative ">
                                    <img src="{{{image}}}=s650-c" class="img-fluid w-100 d-block">
                                    <div class="overlay-box">
                                        <div class="overlay-inner overlay-content">
                                            <h5 class="mb-0">{{name}}</h5>
                                            <p>{{category}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/projects}}
               </div>
            </div>
        </section>

        <section class="py-md-5 mb-5 block" onmouseover="move1(72),move2(63),move3(40), this.onmouseover=null">
            <div class="container" >
                <div class="row block-header">
                    <div class="col-sm-8 mx-auto text-center">
                        <h1 class="display-4 mt-5 mb-5">Skills</h1>
                        <hr>
                        <div id="ifmobile" ></div>
                        <script>
                            if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)){
                                document.getElementById("ifmobile").innerHTML = "Tap here";    
                            }
                        </script>
                            <br>
                            <h4>Data Structures & Algorithms</h4>
                            <div class="myProgress">
                                <div id="myBar1" class="myBar"></div>
                            </div>
                            <br>
                            <h4>C++(STL)</h4>
                            <div class="myProgress">
                                <div id="myBar2" class="myBar"></div>
                            </div>
                            <br>
                            <h4>Python</h4>
                            <div class="myProgress">
                                <div id="myBar3" class="myBar"></div>
                            </div>
                            <br>

 <!--                           <div class="mt-5 w3-light-grey w3-round-xlarge">
                              <div id="skill2" class="w3-container w3-padding-large w3-round-xlarge w3-blue w3-center" style="width:0">C++</div>
                            </div>
                            <div id="skill3" class="mt-5 w3-light-grey w3-round-xlarge">
                              <div class="w3-container w3-padding-large w3-round-xlarge w3-blue w3-center" style="width:0">Python</div>
                            </div>-->
                    </div>
                </div>
            </div>
        </section>
    <script>


        var i1 = 0;
        function move1(w) {
        if (i1 == 0) {
            i1 = 1;
            var elem = document.getElementById("myBar1");
            var width = 10;
            var id = setInterval(frame, 10);
            function frame() {
            if (width >= w) {
                clearInterval(id);
                i1 = 0;
            } else {
                width++;
                elem.style.width = width + "%";
            }
            }
        }
        }
        var i2 = 0;
        function move2(w) {
        if (i2 == 0) {
            i2 = 1;
            var elem = document.getElementById("myBar2");
            var width = 10;
            var id = setInterval(frame, 10);
            function frame() {
            if (width >= w) {
                clearInterval(id);
                i2 = 0;
            } else {
                width++;
                elem.style.width = width + "%";
            }
            }
        }
        }
        var i3 = 0;
        function move3(w) {
        if (i3 == 0) {
            i3 = 1;
            var elem = document.getElementById("myBar3");
            var width = 10;
            var id = setInterval(frame, 10);
            function frame() {
            if (width >= w) {
                clearInterval(id);
                i3 = 0;
            } else {
                width++;
                elem.style.width = width + "%";
            }
            }
        }
        }
    </script>
    

    <section class="py-md-5 block text-center contact-block " style="background:url('{{{page.contact.img_background}}}=s2048');background-size:cover;background-position:center;height:90vh">
        <div class="container" style="height:100vh">
            <div class="row block-header">
                <div class="col-sm-8 mx-auto text-center">
                    <br>
                    <h1 class="display-4 mt-2"> {{page.contact.header}}</h1>
                    <hr>
                    <p class="lead">{{page.contact.subheader}}</p>
                </div>
            </div>
            <div class="row mt-4">
                <form class="col-md-4 col-xl-4 mx-auto input-border">
                    <div class="form-group">
                        <input id="contact-form-name" type="text" class="form-control form-control-lg" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input id="contact-form-email" type="text" class="form-control form-control-lg" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input id="contact-form-message" type="text" class="form-control form-control-lg" placeholder="Message">
                    </div>
                    <button id="btn-contact-submit" class="btn btn-block btn-lg btn-info">Sign up</button>
                </form>
            </div>
        </div>
    </section>

        {{>footer}}
    </div>

    {{>scripts}}
    <script src="{{{cdn}}}/js/contact.js"></script>

</body>
</html>
